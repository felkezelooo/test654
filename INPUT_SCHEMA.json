{
  "title": "YouTube & Rumble View Bot",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "videoUrls": {
      "title": "Video URLs",
      "type": "array",
      "description": "List of YouTube or Rumble video URLs to watch",
      "editor": "stringList",
      "prefill": ["https://www.youtube.com/watch?v=example"]
    },
    "watchTimePercentage": {
      "title": "Watch Time Percentage",
      "type": "integer",
      "description": "Percentage of video to watch (1-100)",
      "default": 80,
      "minimum": 1,
      "maximum": 100
    },
    "useProxies": {
      "title": "Use Proxies",
      "type": "boolean",
      "description": "Whether to use Apify proxies",
      "default": true
    },
    "proxyCountry": {
      "title": "Proxy Country",
      "type": "string",
      "description": "Country code for proxies (e.g., US, GB, DE)",
      "default": "US",
      "editor": "select",
      "enum": ["US", "GB", "DE", "FR", "JP", "CA", "AU", "BR", "IN", "IT", "ES", "NL", "SE", "SG"]
    },
    "proxyGroups": {
      "title": "Proxy Groups",
      "type": "array",
      "description": "Apify proxy groups to use",
      "default": ["RESIDENTIAL"],
      "editor": "stringList"
    },
    "disableProxyTests": {
      "title": "Disable Proxy Tests",
      "type": "boolean",
      "description": "Skip testing proxies before use",
      "default": false
    },
    "concurrency": {
      "title": "Concurrency",
      "type": "integer",
      "description": "Number of concurrent video views",
      "default": 1,
      "minimum": 1
    },
    "concurrencyInterval": {
      "title": "Concurrency Interval",
      "type": "integer",
      "description": "Seconds to wait between starting new workers",
      "default": 1,
      "minimum": 0
    },
    "headless": {
      "title": "Headless Mode",
      "type": "boolean",
      "description": "Run browsers in headless mode",
      "default": true
    },
    "timeout": {
      "title": "Timeout",
      "type": "integer",
      "description": "Maximum seconds to wait for page load",
      "default": 120,
      "minimum": 30
    },
    "autoSkipAds": {
      "title": "Auto Skip Ads",
      "type": "boolean",
      "description": "Automatically skip ads when possible",
      "default": true
    },
    "maxSecondsAds": {
      "title": "Max Seconds for Ads",
      "type": "integer",
      "description": "Maximum seconds to wait for ad to finish",
      "default": 15,
      "minimum": 0
    },
    "skipAdsAfter": {
      "title": "Skip Ads After",
      "type": "array",
      "description": "Skip ads after these many seconds if skip button doesn't appear",
      "default": ["5", "10"],
      "editor": "stringList"
    },
    "useAV1": {
      "title": "Use AV1 Codec",
      "type": "boolean",
      "description": "Use AV1 codec for video playback when available",
      "default": true
    },
    "stopSpawningOnOverload": {
      "title": "Stop Spawning on Overload",
      "type": "boolean",
      "description": "Stop spawning new workers if system is overloaded",
      "default": true
    },
    "enableEngagement": {
      "title": "Enable Engagement Actions",
      "type": "boolean",
      "description": "Enable engagement actions like like, comment, subscribe",
      "default": false
    },
    "performLike": {
      "title": "Perform Like",
      "type": "boolean",
      "description": "Like videos during watching",
      "default": false
    },
    "leaveComment": {
      "title": "Leave Comment",
      "type": "boolean",
      "description": "Leave comments on videos",
      "default": false
    },
    "commentText": {
      "title": "Comment Text",
      "type": "string",
      "description": "Text to use for comments",
      "editor": "textarea"
    },
    "subscribeToChannel": {
      "title": "Subscribe to Channel",
      "type": "boolean",
      "description": "Subscribe to channels during watching",
      "default": false
    }
  },
  "required": ["videoUrls"]
}
